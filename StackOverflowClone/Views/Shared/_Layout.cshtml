<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StackOverflowClone</title>

    <!-- Bootstrap & Custom Styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StackOverflowClone.styles.css" asp-append-version="true" />

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f8f9fa;
        }

        .navbar {
            background-color: #ffffff;
            border-bottom: 1px solid #ddd;
        }

        .navbar-brand {
            font-weight: bold;
            color: #f48024 !important;
        }

        .nav-link {
            color: #3b4045 !important;
            font-weight: 500;
        }

            .nav-link:hover {
                color: #f48024 !important;
            }

        .container {
            max-width: 960px;
        }

        footer {
            font-size: 0.875rem;
            background-color: #f1f2f3;
            border-top: 1px solid #ddd;
        }

            footer a {
                color: #6c757d;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-lg fixed-top shadow-sm">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png"  style="height: 32px;" class="me-2" />
                    <span class="fw-bold text-dark">StackOverflowClone</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" aria-controls="navbarMain"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Questions" asp-action="Index">Questions</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Answers" asp-action="Create" asp-route-qId="1">Answer</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container mt-5 pt-4">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="text-muted py-3 mt-auto">
        <div class="container text-center">
            &copy; 2025 - StackOverflowClone |
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
