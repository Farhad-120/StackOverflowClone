
@model StackOverflowClone.Models.Question

@{
    ViewData["Title"] = "Ask a Question";
}

<h1 class="mb-4">Ask a Question</h1>

<form asp-action="Create" class="needs-validation" novalidate>
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>


    <div class="form-group mb-3">
        <label asp-for="Title" class="form-label">
            Title <span class="text-danger">*</span>
        </label>
        <input asp-for="Title" class="form-control" placeholder="Be specific and imagine you're asking a question to another person. Min 15 characters." required minlength="15" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>


    <div class="form-group mb-3">
        <label asp-for="Body" class="form-label">
            Body <span class="text-danger">*</span>
        </label>
        <textarea asp-for="Body" class="form-control" id="BodyEditor" rows="10" placeholder="Include all the information someone would need to answer your question. Min 220 characters." required minlength="220"></textarea>
        <span asp-validation-for="Body" class="text-danger"></span>
    </div>


    <div class="form-group mb-3">
        <label asp-for="PostedBy" class="form-label">Posted By</label>
        <input asp-for="PostedBy" class="form-control" />
        <span asp-validation-for="PostedBy" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="PostedDate" class="form-label">Posted Date</label>
        <input asp-for="PostedDate" class="form-control" type="date" />
        <span asp-validation-for="PostedDate" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Post Your Question</button>
</form>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">← Back to Questions</a>
</div>
 
 @section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

  
    <script src="https://cdn.tiny.cloud/1/eqkvowi4drs5puti2r0vam7z2f4zik6zjp701t8cid0jmooc/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: '#BodyEditor',
            menubar: false,
            plugins: "image=R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7",
            toolbar: 'bold italic underline strikethrough | bullist numlist | link image | code table',
            height: 300
        });
    </script>
} 





