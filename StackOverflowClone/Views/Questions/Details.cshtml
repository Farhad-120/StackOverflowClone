@model StackOverflowClone.Models.Question

@{
    ViewData["Title"] = "Question Details";
}

<h2>@Model.Title</h2>

<p><strong>By:</strong> @Model.PostedBy</p>
<p><strong>Date:</strong> @Model.PostedDate.ToShortDateString()</p>

<hr />

<p>@Model.Body</p>

<hr />

<h3>Answers</h3>

@if (Model.Answers != null && Model.Answers.Any())
{
    <ul>
        @foreach (var ans in Model.Answers)
        {
            <li class="mb-3">
                <strong>@ans.PostedBy</strong> (@ans.PostedDate.ToShortDateString()) <br />
                @ans.Body
            </li>
        }
    </ul>
}
else
{
    <p>No answers yet.</p>
}

<p>
    <a class="btn btn-success" asp-controller="Answers" asp-action="Create" asp-route-qId="@Model.Id">
        Add Answer
    </a>
</p>

<p>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</p>
